<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/trigger_item"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?android:activatedBackgroundIndicator"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:padding="@dimen/item_margin">

    <TextView
        android:id="@+id/trigger_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_grey_400"
        android:textSize="15sp"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

        <TextView
            android:id="@+id/trigger_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_grey_400"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/item_horizontal_margin"
            android:layout_marginLeft="@dimen/item_horizontal_margin"
            android:layout_marginRight="@dimen/item_horizontal_margin"
            android:layout_marginStart="@dimen/item_horizontal_margin"
            android:text="@string/when"
            android:textColor="@color/material_grey_400"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/trigger_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_grey_400"
            android:textSize="20sp"/>

    </LinearLayout>
</LinearLayout>
