<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/selectCluster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_select_cluster"
            android:layout_toLeftOf="@+id/editTriggers"
            />

        <Button
            android:id="@+id/editTriggers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_triggers"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/refresh"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_refresh" />

    <ListView
        android:id="@+id/vmListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_vms"
        android:textSize="20sp"
        android:textAlignment="center"/>

</LinearLayout>
