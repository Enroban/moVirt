<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="VmTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="VmStatsLabel" parent="@style/VmTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VmStat" parent="@style/VmTextView">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="HostStatsLabel" parent="@style/VmTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HostStat" parent="@style/VmTextView">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="StorageDomainStatsLabel" parent="@style/VmTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StorageDomainStat" parent="@style/VmTextView">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ButtonBar">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">1dip</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EventsStyle">
        <item name="android:layout_marginTop">50sp</item>
    </style>

    <style name="eventsProgress">
        <item name="android:layout_marginTop">50sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="vmsProgress">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="commonProgressStyle">
        <item name="android:layout_marginTop">50sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="searchText">
        <item name="android:layout_marginTop">15sp</item>
    </style>

    <style name="cameraViewStyle" parent="@style/Theme.AppCompat">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/overlayActionBar</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/overlayActionBar</item>
    </style>

    <style name="overlayActionBar" parent="@style/Widget.AppCompat.ActionBar"></style>


    <style name="horizontallyCenteredContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="percentageCircleBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="percentageCircleTitle" parent="@style/percentageCircleBase">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="percentageCircleSummaryTitle" parent="@style/percentageCircleBase">
        <item name="android:text">@string/allocated</item>
    </style>

    <style name="percentageCircleSummary" parent="@style/percentageCircleBase">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="percentageCircleOverCommitTitle" parent="@style/percentageCircleBase">
        <item name="android:text">@string/over_commit</item>
    </style>

    <style name="percentageCircleView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="stroke_width">25</item>
        <item name="background_color">#666666</item>
        <item name="text_color">#000000</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="dashboardItemImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="dashboardItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">1sp</item>
    </style>

    <style name="dashboardVerticalDivider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="CertTreeNodeStyle">
        <item name="android:paddingLeft">18dp</item>
    </style>
</resources>
